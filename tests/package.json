{
  "name": "test",
  "description": "Tests",
  "dependencies": {
    "@syncano/cli": "0.7.0",
    "@syncano/core": "0.7.0",
    "@syncano/test-tools": "0.7.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-plugin-extensible-destructuring": "^4.1.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-syntax-async-functions": "6.13.0",
    "babel-plugin-syntax-object-rest-spread": "6.13.0",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-register": "^6.26.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "console.mute": "^0.3.0",
    "dirty-chai": "^2.0.1",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "mock-fs": "^4.4.2",
    "npm-cli-login": "^0.0.10",
    "prettier": "^1.7.4",
    "replace": "^0.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "sinon-test": "^2.1.2",
    "standard": "^10.0.3"
  },
  "scripts": {
    "precommit": "npm run lint",
    "prepush": "npm run lint && npm run test:unit",
    "unit": "mocha 'tests/unit/*.test.js' --require babel-register",
    "unit:watch": "npm run unit -w",
    "test": "npm-run-all --parallel test:unit test:e2e:group:*",
    "test:e2e:init": "npm run test:e2e-single e2e-cli/init.test-e2e.js",
    "test:e2e:anonymous": "npm run test:e2e-single e2e-cli/anonymous.test-e2e.js",
    "test:e2e:deploy": "npm run test:e2e-single e2e-cli/deploy.test-e2e.js",
    "test:e2e:config": "npm run test:e2e-single e2e-cli/config.test-e2e.js",
    "test:e2e:registry": "npm run test:e2e-single e2e-cli/registry.test-e2e.js",
    "test:e2e:hosting": "npm run test:e2e-single e2e-cli/hosting.test-e2e.js",
    "test:e2e:socket": "npm run test:e2e-single e2e-cli/socket.test-e2e.js",
    "test:e2e:instance": "npm run test:e2e-single e2e-cli/instance.test-e2e.js",
    "test:e2e-single": "mocha --require babel-register --timeout 100000 --slow 8000",
    "test:unit": "npm run unit",
    "lint": "standard --fix --env mocha",
    "format": "prettier --write --single-quote --no-semi --no-bracket-spacing *.js {src,test}/**/*.js"
  },
  "babel": {
    "plugins": [
      "add-module-exports",
      "transform-async-to-generator",
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  }
}
